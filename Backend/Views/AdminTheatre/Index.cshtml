@model IEnumerable<Backend.Models.Theatre>

<h2 class="text-center mt-4">Danh Sách Rạp Chiếu Phim</h2>

<div class="container mt-4">
    <!-- Nút Thêm -->
    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Thêm Rạp Mới
        </a>
    </div>

    <!-- Bảng Danh Sách Rạp -->
    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Tên Rạp</th>
                    <th>Địa Chỉ</th>
                    <th>Tọa Độ</th>
                    <th>Tiện Ích</th>
                    <th>Loại Màn Hình</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var theatre in Model)
                {
                    <tr>
                        <td>@theatre.Name</td>
                        <td>@theatre.FullAddress</td>
                        <td>@theatre.Coordinates</td>
                        <td>
                            @if (theatre.Facilities != null && theatre.Facilities.Any())
                            {
                                @foreach (var facility in theatre.Facilities)
                                {
                                    <span class="badge bg-success me-1">@facility</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                        <td>
                            @if (theatre.AvailableScreensList.Any())
                            {
                                @foreach (var screen in theatre.AvailableScreensList)
                                {
                                    <span class="badge bg-info me-1">@screen</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@theatre.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                    data-id="@theatre.Id" data-name="@theatre.Name">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa rạp <strong id="itemName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const name = button.getAttribute('data-name');

        document.getElementById('itemName').textContent = name;
        document.getElementById('deleteId').value = id;
    });
</script>
