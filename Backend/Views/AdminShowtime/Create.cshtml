@model Backend.Models.Showtime

<h2 class="text-center mt-4">Thêm Suất Chiếu</h2>

<div class="container mt-4">
    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()

        <!-- Chọn Phim -->
        <div class="mb-3">
            <label asp-for="MovieId" class="form-label">Phim</label>
            <select asp-for="MovieId" class="form-select">
                <option value="">-- Chọn Phim --</option>
                @foreach (var movie in ViewBag.Movies as List<Backend.Models.Movie>)
                {
                    <option value="@movie.Id">@movie.Title</option>
                }
            </select>
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>

        <!-- Chọn Rạp -->
        <div class="mb-3">
            <label asp-for="TheatreId" class="form-label">Rạp</label>
            <select asp-for="TheatreId" class="form-select">
                <option value="">-- Chọn Rạp --</option>
                @foreach (var theatre in ViewBag.Theatres as List<Backend.Models.Theatre>)
                {
                    <option value="@theatre.Id">@theatre.Name</option>
                }
            </select>
            <span asp-validation-for="TheatreId" class="text-danger"></span>
        </div>

        <!-- Chọn Màn Hình -->
        <div class="mb-3">
            <label asp-for="Screen" class="form-label">Màn hình chiếu</label>
            <select asp-for="Screen" class="form-select">
                <option value="">-- Chọn Màn Hình --</option>
                @foreach (var screen in ViewBag.Screens as List<string>)
                {
                    <option value="@screen">@screen</option>
                }
            </select>
            <span asp-validation-for="Screen" class="text-danger"></span>
        </div>

        <!-- Chọn Thời gian -->
        <div class="mb-3">
            <label asp-for="StartTime" class="form-label">Thời gian bắt đầu</label>
            <input type="datetime-local" asp-for="StartTime" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <!-- Nút Lưu -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary w-25 me-2">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary w-25">Hủy</a>
        </div>
    </form>
</div>
